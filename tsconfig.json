{
    "compilerOptions": {
      "target": "ES2015",                   
      "module": "ESNext",                 
      "rootDir": "./src",                   
      "outDir": "./dist",                   
      "strict": true,                       
      "esModuleInterop": true,              
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node", "express", "jsonwebtoken"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }
  